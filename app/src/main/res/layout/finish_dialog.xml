<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_dialog_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Qutlıqlaymız! Siz barlıq basqıshlardan óttińiz. Baǵdarlamaniń keyingi versiyasında jańadan dizayn, taza sózler hám de basqa da imkaniyatlar qosiladı. Sonlıqtan da biz benen qalıń."
        android:textAllCaps="false"
        android:textColor="@color/myDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/btn_understand_finish"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_understand_finish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_btn_dialog"
        android:text="TÚSINIKLI"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_finish" />


</androidx.constraintlayout.widget.ConstraintLayout>